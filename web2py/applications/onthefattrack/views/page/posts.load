{{include 'page/functions.html'}}
<h1>
    Posts
</h1>
<div id="post_link">
    <a href="javascript:showPostForm();">Add Post</a>
</div>
<div id="post_form" style="display:none">
    {{=LOAD('page', 'post_form.load', ajax=True, args=[user_id,])}}
</div>
<div id="posts">
    {{if 'posts' in globals():}}
        {{for row in posts:}}
            {{get_single_post(row.get_author.get_name, row.get_author.slug, row.text, row.date)}}
        {{pass}}
    {{pass}}
</div>

